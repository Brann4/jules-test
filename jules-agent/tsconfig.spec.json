/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jest" // Changed from "jasmine" to "jest"
    ],
    "esModuleInterop": true, // Recommended for Jest
    "emitDecoratorMetadata": true // Often required for Angular + Jest
  },
  "files": [ // Explicitly include setup file for Jest
    "setup-jest.ts"
    // "src/polyfills.ts" // Include if your project has polyfills needed for tests
  ],
  "include": [ // Include all spec files and type definition files
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
